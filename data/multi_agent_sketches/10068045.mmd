    a["a: List of numbers"]
    
    %% Node for second list to swap values
    b["b: List to swap with a"]
    
    %% Temporary storage for swapping
    a --> c["c: Temporary swap storage"]
    
    %% Swapping process
    c --> b
    b --> a
    
